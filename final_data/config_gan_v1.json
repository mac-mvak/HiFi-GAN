{
    "name": "deepspeech",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 22050,
        "spectrogram_params": {
        },
        "log_spec": false
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "generator_model":{
        "type": "Generator",
        "args": {
            "h_u": 512,
            "k_u": [16, 16, 4, 4],
            "k_r": [3, 7, 11],
            "D_rs": [[[1, 1], [3, 1], [5,1]],
            [[1, 1], [3, 1], [5,1]],
            [[1, 1], [3, 1], [5,1]]
            ],
            "l_relu_slope": 0.1
    }
    },
    "discriminator_model": {
        "type": "Discriminator",
        "args": {
            "k_msd": 3,
            "periods_mpd": [2, 3, 5, 7, 11],
            "l_relu_slope":0.1
        }
    },
    "data": {
        "train": {
            "batch_size": 20,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LJspeechDataset",
                    "args": {
                        "crop_len": 8192
                    }
                }
            ]
        }
    },
    "optimizer_generator": {
        "type": "AdamW",
        "args": {
            "lr": 2e-4,
            "betas": [0.8, 0.99],
            "weight_decay":0.01
        }
    },
    "optimizer_discriminator": {
        "type": "AdamW",
        "args": {
            "lr": 2e-4,
            "betas": [0.8, 0.99],
            "weight_decay":0.01
        }
    },
    "loss_generator": {
        "type": "GeneratorLoss",
        "args": {
            "spec_config" : {},
            "la_mel": 45,
            "la_fm": 2
        }
    },
    "loss_discriminator": {
        "type": "DiscriminatorLoss",
        "args": {}
    },
    "metrics": [],
    "lr_scheduler_generator": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.999
        }
    },
    "lr_scheduler_discriminator": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.999
        }
    },
    "trainer": {
        "epochs": 4000,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "len_epoch": 500,
        "wandb_project": "Hi-Fi Project"
    }
}