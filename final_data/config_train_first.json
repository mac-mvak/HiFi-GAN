{
    "name": "deepspeech",
    "n_gpu": 1,
    "preprocessing": {
        "sr": 22050,
        "spectrogram_params": {
        },
        "log_spec": true
    },
    "augmentations": {
        "wave": [
        ],
        "spectrogram": []
    },
    "arch": {
        "type": "DeepSpeech",
        "args": {
            "conv_type": "Conv2d",
            "convs_params": [
                {
                    "convolution": {
                        "in_channels": 1,
                        "out_channels": 32,
                        "kernel_size": [
                            41,
                            11
                        ],
                        "stride": [
                            2,
                            2
                        ]
                    },
                    "batch_norm": {
                        "num_features": 32
                    }
                },
                {
                    "convolution": {
                        "in_channels": 32,
                        "out_channels": 32,
                        "kernel_size": [
                            21,
                            11
                        ],
                        "stride": [
                            2,
                            1
                        ]
                    },
                    "batch_norm": {
                        "num_features": 32
                    }
                },
                {
                    "convolution": {
                        "in_channels": 32,
                        "out_channels": 96,
                        "kernel_size": [
                            21,
                            11
                        ],
                        "stride": [
                            2,
                            1
                        ]
                    },
                    "batch_norm": {
                        "num_features": 96
                    }
                }
            ],
            "grus_params": [
                {
                    "gru": {
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.3,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                },
                {
                    "gru": {
                        "input_size": 800,
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.3,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                },
                {
                    "gru": {
                        "input_size": 800,
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.2,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                },
                {
                    "gru": {
                        "input_size": 800,
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.1,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                },
                {
                    "gru": {
                        "input_size": 800,
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.1,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                },
                {
                    "gru": {
                        "input_size": 800,
                        "hidden_size": 400,
                        "batch_first": true,
                        "dropout": 0.1,
                        "bidirectional": true
                    },
                    "batch_norm": {
                        "num_features": 800
                    }
                }
            ],
            "n_feats": 256
        }
    },
    "data": {
        "train": {
            "batch_size": 5,
            "num_workers": 1,
            "datasets": [
                {
                    "type": "LJspeechDataset",
                    "args": {
                        "part": "train"
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 200,
            "epochs": 201,
            "anneal_strategy": "cos",
            "max_lr": 0.0006,
            "pct_start": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "asr_project",
        "len_epoch": 200,
        "grad_norm_clip": 10
    }
}